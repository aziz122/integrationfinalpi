{% block body %}

    <h3>Liste Commandes:</h3>


    <table border="2">
        <thead>
        <tr>
            <th>Id</th>
            <th>Prix Totale</th>
            <th>Date Commande</th>
            <th>Mode Paiement</th>
            <th>Etat Commande</th>

        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
        <tr>
            <td>{{ commande.id }}</td>
            <td>{{ commande.prixtot }}</td>
            <td>{{ commande.datecomm ? commande.datecomm|date('Y-m-d') : '' }}</td>
            <td>{{ commande.modepaiement }}</td>
            <td>{{ commande.etatcomm }}</td>
            {% endfor %}

        </tbody>

{% endblock %}